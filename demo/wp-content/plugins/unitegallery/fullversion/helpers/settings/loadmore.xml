<?xml version="1.0" encoding="UTF-8"?>

<fields>

	<fieldset name="loadmore" label="Load More" icon="eg-icon-cog-alt">
	
		<field name="show_loadmore"
			type="boolean"
			default="false"
			label="&lt;b&gt;Show Load More&lt;/b&gt;"
			description="Show load more link under the images">
		</field>
		
		<field type="bulk_control_start" 
			parent="show_loadmore"
			ctype="show" 
			value="true"
		/>
			
			<field name="loadmore_max_items" 
				type="text"
				default="50" 
				label="&amp;nbsp; Max Items Per Load"
				unit="items"
				description="Maximum items per load">
			</field>
			
			<field name="loadmore_min_items" 
				type="text"
				default="10"
				unit="items"
				label="&amp;nbsp; Min Load More Items"
				description="Minimum items for load more. Make sure that will be not less than that in new loaded items">
			</field>
			
			<field type="hr"></field>		
			
			<field name="loadmore_button_text" 
				type="text"
				default="Load More"
				label="Load More Button Text"
				class="long"
				description="Load more button text">  
			</field>
			
			<field name="loadmore_loader_text" 
				type="text"
				default="Loading..."
				label="Load More Loader Text"
				class="long"
				description="Load more loader text">  
			</field>
			
			<field name="loadmore_text_color" 
				type="color"
				default="#4f4f4f"
				label="Load More Text Color"
				description="Load more button text color"> 
			</field>
			
			<field name="loadmore_border_color" 
				type="color"
				default="#939393"
				label="Load More Border Color"
				description="Load more button border color">  
			</field>
			
			<field type="hr"></field>		
			
			<field name="loadmore_hover_back_color" 
				type="color"
				default="#F0F0F0"
				label="Mouseover Background Color"
				description="Load more button mouseover background color">  
			</field>
			
			<field type="hr"></field>
			
			<field name="loadmore_button_styles" 
				type="textarea"
				default=""
				label="Load More Button Add Styles"
				description="Load more button additional styles">  
			</field>
			
			<field name="loadmore_button_hover_styles" 
				type="textarea"
				default=""
				label="Load More Button Mouseover Add Styles"
				description="Load more button mouseover state additional styles">  
			</field>
			
			<field name="loadmore_loader_styles" 
				type="textarea"
				default=""
				label="Load More Button Loader Add Styles"
				description="Load more button loader additional styles">  
			</field>
			
			
		<field type="bulk_control_end"/>	
			
	</fieldset>
		
</fields>
